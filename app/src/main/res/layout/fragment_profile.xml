<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    tools:context=".ui.profile.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/CIV_ava"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ava"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/TV_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Маша"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toEndOf="@+id/CIV_ava"
        app:layout_constraintTop_toTopOf="@id/CIV_ava"
        app:layout_constraintBottom_toBottomOf="@id/CIV_ava"/>
    <LinearLayout
        android:id="@+id/menu_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/CIV_ava"
        app:layout_constraintBottom_toTopOf="@id/title_orders">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/menu_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Сменить аккаунт"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"/>
    </LinearLayout>
    <TextView
        android:id="@+id/title_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заказы"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/menu_profile" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/RV_orders_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/orders_list_item"
        app:layout_constraintTop_toBottomOf="@id/title_orders"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/emptyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Здесь пока ничего нет"
        app:layout_constraintTop_toBottomOf="@id/title_orders"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>